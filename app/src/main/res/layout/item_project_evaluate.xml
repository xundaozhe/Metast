<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/tv_pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patrick Metast"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有信用等级"
            android:textColor="#bbbbbb"
            android:textSize="16sp"
            android:layout_below="@id/tv_pro_name"
            android:layout_marginTop="8dp"/>
        <ImageView
            android:id="@+id/iv_into"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/item_project_into"/>
        <TextView
            android:id="@+id/tv_pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_into"
            android:text="123.5"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:layout_toLeftOf="@id/tv_pro_price"
            android:layout_marginRight="15dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#bbbbbb"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
</LinearLayout>