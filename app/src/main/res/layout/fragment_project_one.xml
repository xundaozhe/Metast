<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/iv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="工程名称"
            android:textSize="16sp"
            android:textColor="#3D3D3D"/>
        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_project_name"
            android:hint="如门安装、车库改造等"
            android:background="@null"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColorHint="#B9B9B9"
            android:textSize="16sp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/iv_tellPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="手机号码"
            android:textSize="16sp"
            android:textColor="#3D3D3D"/>
        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_tellPhone"
            android:hint="手机号码"
            android:background="@null"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColorHint="#B9B9B9"
            android:textSize="16sp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="地址"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="#3D3D3D"/>
        <EditText
            android:id="@+id/et_address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_address"
            android:hint="地址"
            android:background="@null"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:textColorHint="#B9B9B9"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/btn_select_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="从地图上选择"
            android:background="@drawable/send_idfcode"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/iv_idf_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="邮编"
            android:textSize="16sp"
            android:textColor="#3D3D3D"/>
        <EditText
            android:id="@+id/et_zip_code"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_idf_code"
            android:hint="邮政编码"
            android:background="@null"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:textColorHint="#B9B9B9"
            android:textSize="16sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/btn_next_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="140dp"
        android:text="@string/next"
        android:background="@drawable/send_idfcode"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

</LinearLayout>