<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/textWhite">
    <include layout="@layout/comment_banner_top"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <RadioGroup
            android:id="@+id/rg_project"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:paddingBottom="0.0dip"
            android:paddingTop="0.0dip"
            android:background="#fff"
            android:gravity="center_vertical"
            >

            <RadioButton
                android:id="@+id/rb_project_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/project_one_selector"
                android:button="@null"
                android:paddingRight="10dip"
                android:layout_marginLeft="68dp"
                />


            <RadioButton
                android:id="@+id/rb_project_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/project_two_selector"
                android:button="@null"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:checked="false"
                android:layout_marginLeft="70dp"
                />
            <RadioButton
                android:id="@+id/rb_project_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/project_three_fill"
                android:button="@null"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:maxWidth="10dp"
                android:layout_marginLeft="73dp"
                />

        </RadioGroup>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#BBBBBB" />

    <com.iuunited.myhome.view.FlexiScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:text="描述您的项目"
                android:textSize="18sp"
                android:textColor="#333333"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg_layer">
                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:gravity="left"
                    android:textSize="16sp"
                    />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="附加 (可选)"
                android:textColor="#4D4D4D"
                android:textSize="16sp"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#BBBBBB" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.iuunited.myhome.view.MyGridView
                    android:id="@+id/gv_publish_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:horizontalSpacing="15dp"
                    android:numColumns="3"
                    android:paddingLeft="8dp"
                    android:scrollbars="none"
                    android:verticalSpacing="15dp"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    >
                    <Button
                        android:id="@+id/btn_preview"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="预览"
                        android:background="@drawable/send_idfcode"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        />
                    <Button
                        android:id="@+id/btn_publish"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="发布"
                        android:background="@drawable/send_idfcode"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.iuunited.myhome.view.FlexiScrollView>
</LinearLayout>